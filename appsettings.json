{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/home/app/logs/bourak-wea.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
        }
      },
    ],
  },
  "AllowedHosts": "*"
}
